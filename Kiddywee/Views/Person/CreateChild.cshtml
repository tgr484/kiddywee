@model ChildCreateViewModel
@{
    Layout = null;
}
<div class="modal-header">
    <h4 class="modal-title" id="myLargeModalLabel">Create New Child</h4>
    <button type="button" class="close close-modal" data-dismiss="modal" aria-hidden="true" >×</button>
</div>
<div class="modal-body">
    <form class="form-material" id="SavePerson" asp-action="CreateChild" asp-controller="Person"
          method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Firstname </label>
                    <input type="text" asp-for="FirstName" class="form-control form-control-line" placeholder="Enter firstname...">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Lastname</label>
                    <input type="text" asp-for="LastName" class="form-control form-control-line" placeholder="Enter lastname">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Class</label>
                    <select class="select2 select2-multiple" data-style="form-control form-control-line" asp-for="ClassId" style="width: 100%;" asp-items="@(new SelectList(Model.Classes, "Id", "Name"))"></select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" asp-for="Address" class="form-control form-control-line" placeholder="Enter address">
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Date Of Birth</label>
                    <input type="date" asp-for="DateOfBirth" class="form-control form-control-line" placeholder="Enter date">
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Next medical</label>
                    <input type="date" asp-for="NextMedical" class="form-control form-control-line" placeholder="Enter date">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Weekly schedule</label> <br />
            @foreach (EnumWeeklyScheduleType item in Enum.GetValues(typeof(EnumWeeklyScheduleType)))
            {
                <input name="WeaklySchedule" type="checkbox" value="@item" /> @item
                <text>&nbsp; &nbsp; &nbsp;</text>
            }
        </div>
        <div class="form-group">
            <label>Daily schedule</label> <br />
            @foreach (EnumDailyScheduleType item in Enum.GetValues(typeof(EnumDailyScheduleType)))
            {
                <input name="DailySchedule" type="checkbox" value="@item" /> @item
                <text>&nbsp; &nbsp;</text>
            }
        </div>

        <div class="form-group">
            <label for="example-email">Pipeline Type</label>
            <select class="form-control " asp-for="PipeLineType" asp-items="Html.GetEnumSelectList<EnumPipeLineType>()"></select>
        </div>
        <hr />
        <span> Medical info</span>  
        <div class="form-group file">
            <input type="file" multiple="multiple" asp-for="Files"/>            
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger waves-effect close-modal" data-dismiss="modal" >Close</button>
    <button type="submit" class="btn btn-info waves-effect" form="SavePerson">Save</button>
</div>
<script>
    $(document).ready(function () {
        $(".select2").select2({
            dropdownParent: $(".modal")
        });
    });
</script>