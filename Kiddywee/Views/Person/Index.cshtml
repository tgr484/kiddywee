@model List<PersonViewModel>
@{
    Layout = null;
}
<div class="row">
    @foreach (PersonViewModel item in Model)
    {

        <div class="col-md-3 el-element-overlay">
            <div class="el-card-item">
                <div class="card card-body el-overlay-1 @item.AttendanceCssClass"  style="border: 1px solid @item.CardBorderColor;" >
                    <div class="row">
                        <div class="col-md-5 text-center">
                            <a href="app-contact-detail.html"><img src="https://www.pinclipart.com/picdir/middle/381-3819622_png-file-svg-child-icon-png-clipart.png" alt="user" class="img-circle img-responsive"></a>
                        </div>
                        <div class="col-md-7">
                            <h3 class="box-title m-b-0">@item.FirstName<br />@item.LastName</h3>
                        </div>
                        <div class="el-overlay">
                            <ul class="el-info"> 
                                <li><a class="btn default btn-outline edit-person" href="javascript:void(0);" data-url="@Url.Action(item.EditAction, "Person", new { personId = item.Id })"><i class="sl-icon-user"></i></a></li>
                                <li>
                                    <a class="btn default btn-outline checkInOut-person" href="javascript:void(0);" data-url="@Url.Action("CheckInOut", "Attendance", new { personId = item.Id, classId = item.ClassId })">
                                        @Html.Raw(item.CheckInOutIcon)
                                    </a>


                  </li>


                  <li><a class="btn default btn-outline" href="javascript:void(0);" data-url=""><i class="sl-icon-note"></i></a></li>
                                <li><a class="btn default btn-outline" href="javascript:void(0);"><i class="sl-icon-shield"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }   
</div>

