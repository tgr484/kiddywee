@model List<PersonViewModel>
@{
    Layout = null;
}
<div class="row">
    @foreach (PersonViewModel item in Model)
    {

        <div class="col-md-3 el-element-overlay person-card @item.PersonRoleCssClassNoStyles" data-name="@item.FullName">
            <div class="el-card-item">
                <div class="card card-body el-overlay-1 @item.AttendanceCssClass @item.PersonRoleCssClass">
                    <div class="row">
                        <div class="col-md-5 text-center">
                            <a href="app-contact-detail.html"><img src="@Url.Action("GetProfileImage", "File", new { personId = item.Id})" style="width:85px;height:85px;" alt="user" class="img-circle img-responsive"></a>
                        </div>
                        <div class="col-md-7">
                            <h3 class="box-title m-b-0">@item.FirstName<br />@item.LastName</h3>
                        </div>
                        <div class="el-overlay">
                            <ul class="el-info">
                                <li><a class="btn default btn-outline edit-person" data-url="@Url.Action(item.EditAction, "Person", new { personId = item.Id })"><i class="sl-icon-user"></i></a></li>
                                @if (item.CheckOutTime.HasValue == false)
                                {
                                    <li>
                                        <a class="btn default btn-outline checkInOut-person" data-classid="@item.ClassId" data-url="@Url.Action("CheckInOut", "Attendance", new { personId = item.Id, classId = item.ClassId })">
                                            @Html.Raw(item.CheckInOutIcon)
                                        </a>
                                    </li>
                                }

                                <li><a class="btn default btn-outline" data-url=""><i class="sl-icon-note"></i></a></li>
                                <li><a class="btn default btn-outline"><i class="sl-icon-shield"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

